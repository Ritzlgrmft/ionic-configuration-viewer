{
	"name": "ionic-configuration-viewer",
	"version": "0.0.0-development",
	"description": "Viewer component for configuration data provided by ionic-configuration-service",
	"author": {
		"name": "Markus Wagner",
		"email": "markus.wagner02@web.de"
	},
	"repository": "https://github.com/Ritzlgrmft/ionic-configuration-viewer.git",
	"license": "MIT",
	"private": false,
	"keywords": [
		"ionic",
		"configuration",
		"environizing"
	],
	"scripts": {
		"build": "npm run clean && npm run compile && npm run copy-scss",
		"clean": "rm -f dist/*.d.ts && rm -f dist/*.js && rm -f dist/*.map && rm -f dist/*.json && rm -f dist/*.scss && rm -f src/*.ngfactory.ts",
		"commit": "git-cz",
		"compile": "ngc -p tsconfig.ngc.json",
		"copy-scss": "cp src/*.scss dist",
		"karma": "karma start karma.conf.js --browsers Chrome",
		"karma-once": "karma start karma.conf.js --browsers PhantomJS --single-run",
		"lint": "tslint --project tsconfig.ngc.json --config tslint.typecheck.json --format verbose --type-check --exclude \"**/*.spec.ts\"",
		"pack": "npm run build && npm pack",
		"report-coverage": "codecov",
		"semantic-release": "semantic-release pre && npm publish && semantic-release post",
		"test": "npm run build && npm run lint && npm run karma-once"
	},
	"files": [
		"dist",
		"src"
	],
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"peerDependencies": {
		"@angular/common": "^2.2.1",
		"@angular/compiler": "^2.2.1",
		"@angular/compiler-cli": "^2.2.1",
		"@angular/core": "^2.2.1",
		"@angular/forms": "^2.2.1",
		"@angular/http": "^2.2.1",
		"@angular/platform-browser": "^2.2.1",
		"@angular/platform-browser-dynamic": "^2.2.1",
		"@angular/platform-server": "^2.2.1",
		"ionic-angular": "^2.0.0",
		"rxjs": "^5.0.0-beta.12",
		"zone.js": "^0.6.26"
	},
	"dependencies": {
		"ionic-configuration-service": "^3.1.0",
		"ionic-logging-service": "^1.2.0"
	},
	"devDependencies": {
		"@angular/common": "2.2.1",
		"@angular/compiler": "2.2.1",
		"@angular/compiler-cli": "2.2.1",
		"@angular/core": "2.2.1",
		"@angular/forms": "2.2.1",
		"@angular/http": "2.2.1",
		"@angular/platform-browser": "2.2.1",
		"@angular/platform-browser-dynamic": "2.2.1",
		"@angular/platform-server": "2.2.1",
		"ionic-angular": "2.1.0",
		"rxjs": "5.0.0-beta.12",
		"zone.js": "~0.6.26",
		"@types/es6-shim": "~0.31.32",
		"@types/jasmine": "2.5.41",
		"codecov": "~1.0.1",
		"codelyzer": "2.0.0-beta.4",
		"commitizen": "~2.9.6",
		"cz-conventional-changelog": "~2.0.0",
		"jasmine-core": "~2.5.2",
		"karma": "~1.5.0",
		"karma-chrome-launcher": "~2.0.0",
		"karma-es6-shim": "~1.0.0",
		"karma-jasmine": "~1.1.0",
		"karma-phantomjs-launcher": "~1.0.2",
		"karma-typescript": "^2.1.7",
		"reflect-metadata": "~0.1.10",
		"requirejs": "~2.3.3",
		"tslint": "~4.5.1",
		"typescript": "~2.0.9",
		"semantic-release": "^6.3.2"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}